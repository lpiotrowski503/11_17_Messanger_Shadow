section(
  id='login'
  )
  form(
    (submit)='onLoginSubmit()'
    )
    div
      label {{ strings.lang?.login.nick  }}
      input(
        type='text',
        '[(ngModel)]'='nick',
        name='nick'
        )
    div
      label {{ strings.lang?.login.password  }}
      input(
        type='password',
        '[(ngModel)]'='pass',
        name='pass'
        )
    div
      input(
        type='submit',
        [value]='strings.lang?.login.button'
        )
